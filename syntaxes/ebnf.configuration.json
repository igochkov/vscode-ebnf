{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "(*", "*)" ]
    },
    "brackets": [
        [ "{", "}" ],
        [ "(:", ":)" ],

        [ "[", "]" ],
        [ "(/", "/)" ],

        [ "(", ")" ]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["(:", ":)"],

        ["[", "]"],
        ["(/", "/)"],

        { "open": "(*", "close": "*)", "notIn": ["string", "comment"] },

        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },

        { "open": "?", "close": "?", "notIn": ["string", "comment"] }
    ],
    "folding": {
        "markers": {
          "start": "^\\(\\*\\s*region(\\s*\\w*)*\\*\\)",
          "end": "^\\(\\*\\s*endregion\\s*\\*\\)"
        }
    },
    "wordPattern": "((?:[a-zA-Z])(?:[a-zA-Z0-9_-])*)"
}